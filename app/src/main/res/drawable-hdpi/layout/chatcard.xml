<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="8dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userItemImageprofile"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_launcher"></de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/Usernameitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:text=""
                android:textSize="18sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/lasttextitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Usernameitem"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:text=""
                android:textSize="18sp"
               />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image_Status_On"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/Usernameitem"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/userItemImageprofile"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                app:civ_border_color="#05df29"
                app:civ_border_width="10dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image_Status_Off"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/Usernameitem"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/userItemImageprofile"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                app:civ_border_color="#bfbfbf"
                app:civ_border_width="10dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>