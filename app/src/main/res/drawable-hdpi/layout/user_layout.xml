<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70sp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:clipToPadding="true"
            android:padding="8dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userItemImageprofile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/user"></de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/Usernameitem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/userItemImageprofile"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:textColor="#fff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/lastMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Usernameitem"
                android:layout_alignStart="@+id/userItemImageprofile"
                android:layout_alignParentTop="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:textColor="#fff"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Usernameitem"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="12.5dp"
                android:textColor="#fff"
                android:textSize="12sp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image_Status_On"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/Usernameitem"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/userItemImageprofile"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                app:civ_border_color="#05df29"
                app:civ_border_width="10dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Image_Status_Off"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_below="@id/Usernameitem"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/userItemImageprofile"
                android:layout_toRightOf="@+id/userItemImageprofile"
                android:src="@mipmap/ic_launcher"
                android:visibility="gone"
                app:civ_border_color="#bfbfbf"
                app:civ_border_width="10dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>